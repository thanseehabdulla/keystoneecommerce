{{!< default}}
<div class="container">
		<h1>Shopping Cart</h1>
		{{#if isCartEmpty}}
		<p>Shopping cart is empty</p>
		{{else}}
		<table class="cart-contents">
				<thead>
						<tr class="cart-contents__heading">
								<td>Item Name</td>
								<td>Price ($)</td>
								<td>Quantity</td>
								<td>Image</td>
						</tr>
				</thead>
				<tbody>
						{{# each cartContents}}
						<tr>
								<td class="cart-contents__item__name">{{{this.name}}}</td>
								<td class="cart-contents__item__price">${{{this.priceString}}}</td>
								<td class="cart-contents__item__quantity">{{{this.quantity}}}</td>
								<td>
										<img class="cart-contents__item__image" src="{{{this.imageUrl}}}"></img>
								</td>
								<td class="no-border">
										<a class="cart-contents__item__removeLink" href="/remove-from-cart/{{{this.id}}}">Remove</a>
								</td>
						</tr>
						{{/each}}
				</tbody>
		</table>
		<a id="checkout-button" class="btn btn-primary" href="/checkout">Check Out</a>
		{{/if}}
</div>
